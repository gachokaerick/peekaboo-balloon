    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.main.MainActivity" android:tag="layout/main_activity_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">


        <EditText
                android:id="@+id/double_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="双向绑定"
                android:tag="binding_1"             />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_2"            
                app:layout_constraintTop_toBottomOf="@+id/double_et"
                android:background="@color/colorAccent"
                tools:text="Hello World!"/>


        <TextView
                android:id="@+id/test_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:tag="binding_3"  
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorAccent"
                tools:text="Hello World!"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
         