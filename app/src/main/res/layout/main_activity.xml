<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
                name="vm"
                type="com.delight.labs.games.view.main.viewmodel.MainViewModel"/>

        <variable
                name="presenter"
                type="com.delight.labs.games.view.base.Presenter"/>
    </data>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.main.MainActivity">


        <EditText
                android:id="@+id/double_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="双向绑定"
                android:text="@={vm.doubleBindText}"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.doubleBindText}"
                app:layout_constraintTop_toBottomOf="@+id/double_et"
                android:background="@color/colorAccent"
                tools:text="Hello World!"/>


        <TextView
                android:id="@+id/test_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="@{vm.text}"
                android:padding="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorAccent"
                tools:text="Hello World!"/>

    </android.support.constraint.ConstraintLayout>
</layout>